@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="mt-4">Fatura Kalem Girişi</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/Home/Index/">Ana Sayfa</a></li>
    <li class="breadcrumb-item"><a href="/Fatura/Index/">Faturalar</a></li>
    <li class="breadcrumb-item active">Fatura Kalem Girişi</li>
</ol>

<div class="mb-4">
    <form class="form-group" method="post">
        <hr />
        @Html.Label("Açıklama")
        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        @Html.Label("Miktar")
        @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
        @Html.Label("Birim Fiyat")
        @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
        @Html.Label("Tutar")
        @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
        @Html.Label("Fatura ID")
        @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control", Value= TempData["FaturaID"] })
        <br /><hr />
        <button class="btn btn-success">Kaydet</button>
    </form>
</div>
