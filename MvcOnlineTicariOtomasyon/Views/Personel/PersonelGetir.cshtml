@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="mt-4">Departman Ekle</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/Home/Index/">Ana Sayfa</a></li>
    <li class="breadcrumb-item"><a href="/Departman/Index">Departman</a></li>
    <li class="breadcrumb-item active">Departman Ekle</li>
</ol>
<div class="mb-4">
    @using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
    {
        <hr />
        @Html.Label("Personel Adı")
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        @Html.Label("Personel Soyadı")
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        @Html.Label("Personel Görsel")
        @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
        @Html.Label("Departman")
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        @Html.Label("Durum")
        @Html.CheckBoxFor(x => x.Durum, new { @class = "form-control" })
        @Html.HiddenFor(x=> x.Personelid)
        <br /><hr />
        <button class="btn btn-primary">Kaydet</button>
    }
</div>

